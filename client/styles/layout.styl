  left: 0px
  width: 100%
  height: 100%
  
  img
    width: 100%
    
  form
    position: fixed
    left: 0px
    bottom: 0px
    right: 0px
    
    input[type="string"]
      width: 100%
      outline: none
      background: rgba(255,255,255,0.9)
      border: none
